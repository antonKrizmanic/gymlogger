@inherits BaseComponent
@rendermode @(new InteractiveAutoRenderMode(prerender: false))

<FluentGrid Style="width:100%;">
    <FluentGridItem xs="12" sm="12" md="6" lg="4" xl="3">
        <FluentCard>
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                <FluentCombobox @bind-Value="@Model.ExerciseId"                                
                                Label="Vježba"
                                style="width:100%"
                                Height="300px"
                                Items="@Exercises"
                                TOption="ExerciseDto"
                                OptionValue="@((item) => item.Id.ToString())"
                                OptionText="@((item) => item.Name)"
                                Autocomplete="ComboboxAutocomplete.List">
                </FluentCombobox>
                <FluentTextArea Style="width:100%"
                                @bind-Value=Model.Note
                                Label="Napomena" />
                <FluentStack Orientation="Orientation.Horizontal">
                    <FluentButton OnClick="SaveAsync" Appearance="Appearance.Accent">Dodaj vježbu</FluentButton>
                    <FluentButton OnClick="Close">Odustani</FluentButton>
                </FluentStack>
            </FluentStack>
        </FluentCard>
    </FluentGridItem>
</FluentGrid>

